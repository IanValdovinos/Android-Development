<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="door_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/normal_door</item>
        <item name="android:fontFamily">@font/abril_fatface</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">70dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">70dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="counter_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:fontFamily">@font/racing_sans_one</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
